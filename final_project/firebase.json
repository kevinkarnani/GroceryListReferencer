{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/@(register|userSubmit|passwordReset|logged_in|logout)",
        "function": "auth"
      },
      {
        "source": "**/@(getUserLists|retrieveGroceryList|createGroceryList|checkAvail|deleteList|updateList|getGroceryItems)",
        "function": "server"
      }
    ],
    
    "headers": [{
        "source": "/app/**",
        "headers": [{
            "key": "Access-Control-Allow-Origin",
            "value": "*"
        }]
  }],
    "cleanURLs": true
  },
  "functions": {
    "source": "functions"
  }
}
